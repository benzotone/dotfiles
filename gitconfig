[alias]
  ai = add -i
  ap = add -p
  b = branch -vv
  cm = commit
  cma = commit --amend --no-edit
  co = checkout
  cod = checkout --detach
  com = checkout master
  d = diff
  dw = diff --word-diff
  dc = diff --cached
  f = fetch
  h = help
  last = log -n1 --decorate=short --abbrev-commit --format=fuller --stat
  l = log
  lb = log --decorate=short --abbrev-commit master..
  lg = log --pretty=oneline-extra --date=relative --graph
  lm = log --pretty=oneline-extra --date=relative --first-parent master
  mt = mergetool
  pl = pull
  ps = push
  psu = push -u origin HEAD
  r = rebase
  ri = rebase --interactive
  rim = rebase --interactive master
  ru = rebase @{u}
  s = status -sb
